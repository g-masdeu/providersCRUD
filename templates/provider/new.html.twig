{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">{{ provider.id ? 'Editar Proveedor' : 'Nuevo Proveedor' }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="mt-4">
                            <button class="btn btn-success w-100">Guardar Cambios</button>
                            <a href="{{ path('app_provider_index') }}" class="btn btn-link w-100 mt-2 text-muted">Cancelar</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}