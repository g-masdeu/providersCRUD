{{ form_start(form, {'attr': {'id': 'ajax-form', 'class': 'needs-validation'}}) }}
    <div class="row g-3">
        <div class="col-12">
            <label class="form-label fw-bold" for="{{ form.name.vars.id }}">
                <i class="bi bi-person me-1"></i> {{ 'form.name'|trans }}
            </label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small mt-1">{{ form_errors(form.name)|trans }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold" for="{{ form.email.vars.id }}">
                <i class="bi bi-envelope me-1"></i> {{ 'form.email'|trans }}
            </label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small mt-1">{{ form_errors(form.email)|trans }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold" for="{{ form.phone.vars.id }}">
                <i class="bi bi-telephone me-1"></i> {{ 'form.phone'|trans }}
            </label>
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small mt-1">{{ form_errors(form.phone)|trans }}</div>
        </div>

        <div class="col-md-12">
            <label class="form-label fw-bold" for="{{ form.type.vars.id }}">
                <i class="bi bi-tag me-1"></i> {{ 'form.type'|trans }}
            </label>
            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
            <div class="text-danger small mt-1">{{ form_errors(form.type)|trans }}</div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4 border-top-0">
        <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">{{ 'btn.cancel'|trans }}</button>
        <button type="submit" class="btn btn-primary px-4 shadow">
            <i class="bi bi-save me-2"></i> 
            {{ (provider is defined and provider.id) ? 'btn.update'|trans : 'btn.save'|trans }}
        </button>
    </div>
{{ form_end(form) }}